@model KariyerPortali.Admin.ViewModels.DepartmentFormViewModel
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Department")" class="nav-link ">Tanımlamalar</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Yeni Bölüm</span>
            </li>
        </ul>
    </div>
   <br />
    <div class="row">
        <div class="col-md-12 ">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
            <div class="portlet light bordered" style="width:300px;">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">YENİ BÖLÜM EKLEME</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DepartmentName)
                                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control spinner" } })
                                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                                @*<div class="input-icon right">
                                    <input type="text" class="form-control">
                                </div>*@
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Ekle</button>
                            <button type="button" class="btn default">İptal</button>
                        </div>
                    </form>
                </div>
            </div>
}       </div>

    </div>
@section Scripts 
    {
    @Scripts.Render("~/bundles/jqueryval")
    }