@model IEnumerable<KariyerPortali.Admin.Models.ApplicationUser>
@{
    ViewBag.Title = "Tüm Kullanıcılar";
}
<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />


<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/Candidate">Kullanıcılar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Tüm Kullanıcılar </span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Tüm Kullanıcılar
                </h1>
            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Candidate/Edit" id="sample_editable_1_new" class="btn sbold green">
                                    Kullanıcıyı Düzenle
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                    Araçlar
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-print"></i> Yazdır
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-pdf-o"></i> PDF Olarak Kaydet
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-excel-o"></i> Excel'e Aktar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allCandidateTable">
                <thead>
                    
                    <tr>
                        <th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#allCandidateTable .checkboxes" />
                                <span></span>
                            </label>
                        </th>

                        <th> @Html.DisplayNameFor(model=>model.UserName) </th>
                        <th> @Html.DisplayNameFor(model=>model.Ad)</th>
                        <th> Telefon </th>
                        <th> Eposta </th>
                        <th> Durum </th>
                        <th> Kayıt Tarihi </th>
                        <th> Eylemler </th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model){
                    <tr class="odd gradeX">
                        <td>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="checkboxes" value="1" />
                                <span></span>
                            </label>
                        </td>
                        <td> @Html.DisplayFor(modelItem=>item.Email) </td>
                        <td> Katy Perry</td>
                        <td></td>
                        <td>
                            <a href="mailto:shuxer@gmail.com"> shuxer@gmail.com </a>
                        </td>
                        <td>
                            <span class="label label-sm label-success"> Aktif </span>
                        </td>
                        <td class="center"> 12 Jan 2012 </td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Eylemler
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-left" role="menu">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="icon-note"></i> Düzenle
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="icon-list"></i> Detaylar
                                        </a>
                                    </li>

                                    <li>
                                        <a href="javascript:;">
                                            <i class="icon-ban"></i> Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>
@section footer {
    <script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="/Scripts/pages/user-index.js"></script>
    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
}
