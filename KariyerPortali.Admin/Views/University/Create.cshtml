                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                          

                            <div class="form-group">
                                
                               
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-body">
                                    @Html.LabelFor(model => model.UniversityName)
                                    
                                        @Html.EditorFor(model => model.UniversityName, new { htmlAttributes = new {@tabindex="1", @class = "form-control" } })

