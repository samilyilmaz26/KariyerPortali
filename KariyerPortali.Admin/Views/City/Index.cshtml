<br> 
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "City")" class="nav-link">Tanımlamalar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Şehirler</span>
        </li>
    </ul>

</div>
<br> 

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <h1 class="page-title">
                        Şehirler
                    </h1>
                </div>

                <div class="actions">
                    <div class="btn-group btn-group-devided" data-toggle="buttons">
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/City/Create" id="sample_editable_1_new" class=" btn sbold green">
                                    Yeni Şehir
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                    Araçlar
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-print"></i> Yazdır
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-pdf-o"></i> PDF olarak farklı kaydet
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-excel-o"></i> Excel'e gönder
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allCityTable">
                    <thead>
                        <tr>

                            <th width="20">
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">


                                    <input type="checkbox" class="group-checkable" data-set="#allCityTable .checkboxes" />


                                    <span></span>
                                </label>
                            </th>
                            <th width="20"> Şehir ID </th>
                            <th> Şehir Adı </th>
                            <th width="200"> Eylemler </th>
                        </tr>
                    </thead>
                    <tbody>
                        


                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
