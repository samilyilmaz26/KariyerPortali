 <br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered" style="width:300px;">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">YENİ ŞEHİR EKLEME</span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">

                            <div class="form-group">
                                @Html.LabelFor(model => model.CountryId)
                                @Html.DropDownList("CountryId", null, new { @tabindex = "3", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })

                            </div>

                           
                            <div class="form-group">
                                <label>Şehir Adı</label>
                                <div class="input-icon right">
                                    <input type="text" class="form-control">
                                </div>
                            </div>

                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Gönder</button>
                            <button type="button" class="btn default">İptal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
    <!-- END SAMPLE FORM PORTLET-->
